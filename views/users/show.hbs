<h2>{{users.username}}Trip Planner</h2>

<form action="/users/{{userId}}/trips" method="post">
  <input type="text" name="name" value="NAME OF TRAVEL"><br>
  <input type="text" name="begin" value="BEGIN">
  <input type="text" name="end" value="END">
  <input type="submit" name="" value="Submit">

</form>

<ul>
{{#each users.trips}}

  <li>{{name}}:<br> From - {{begin}} -to- {{end}} </li>
  <form action="/users/{{../userId}}/trips/{{_id}}?_method=DELETE" method="POST">
    <input type="submit" value="X">
  </form>
  <form action="/users/{{../userId}}/trips/{{_id}}/edit" method="GET">
    <input type="submit" value="EDIT">
  </form>

{{/each}}
</ul>
